<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="#ffffff"
    android:layout_marginTop="5dp"
    android:id="@+id/home_fragA1_dynamicLine"
    >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/home_fragA1_recyclerView_imageHeader"
                android:layout_marginRight="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_fragA1_recyclerView_massname_textView"
                android:text="武术协会"
                android:layout_marginLeft="5dp"/>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D5D5D5"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_fragA1_recyclerView_sendTime"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/home_fragA1_recyclerView_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="广东水利电力职业技术学院"
                android:layout_marginRight="10dp"/>

        </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/home_fragA1_recyclerView_textBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:layout_margin="10dp"
        >
        <!--<com.app.view.DynamicImageGridView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->

            <!--android:id="@+id/home_fragA1_recyclerView_imageBody">-->
        <!--</com.app.view.DynamicImageGridView>-->
        <com.jaeger.ninegridimageview.NineGridImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:imgGap="4dp"
            app:showStyle="grid"
            app:singleImgSize="120dp"
            app:maxSize="9"
            android:id="@+id/home_fragA1_ninegridImageView">

        </com.jaeger.ninegridimageview.NineGridImageView>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D5D5D5"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"

        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/home_fragA1_moreLine"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_fragA1_recyclerView_moreImage"
                android:src="@android:drawable/ic_input_add"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/home_fragA1_recyclerView_moreText"
                android:text="更多"/>
        </LinearLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="#D5D5D5"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/home_fragA1_sayLine">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_fragA1_recyclerView_sayImage"
                android:src="@android:drawable/sym_action_chat"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/home_fragA1_recyclerView_sayText"
                android:text="评论"/>
        </LinearLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="#D5D5D5"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/home_fragA1_goodLine">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_fragA1_recyclerView_goodImage"
                android:src="@mipmap/cancelgood"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/home_fragA1_recyclerView_goodText"
                android:text="点赞"/>
        </LinearLayout>

    </LinearLayout>




</LinearLayout>